@using Core
@model Film_Collection

<div class="row justify-content-lg-cehter">
    <h1>Добавьте новый фильм в коллекцию</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddFilm">
            <div class="form-group">
                <label asp-for="ID_Film" class="control-label">Номер фильма</label>
                <input asp-for="ID_Film" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ID_Collection" class="control-label">Номер коллекции</label>
                <input asp-for="ID_Collection" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="AddFilm" class=" btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to collection list</a>
</div>